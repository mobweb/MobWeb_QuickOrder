<config>
    <sections>
        <mobweb_quickorder translate="label" module="mobweb_quickorder">
            <tab>sales</tab>
            <label>Quick Order</label>
            <sort_order>9003</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <instruction_text translate="label comment" module="mobweb_quickorder">
                    <label>Instruction Text</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <instruction_text>
                            <label>Instruction Text</label>
                            <frontend_type>textarea</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>This text will be shown at the top of the quick order form. Use it to instruct the customer on how to use the quick order form.</comment>
                        </instruction_text>
                    </fields>
                </instruction_text>
                <configuration translate="label comment" module="mobweb_quickorder">
                    <label>Configuration</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <number_of_lines>
                            <label>Number of lines</label>
                            <validate>required-entry</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>How many lines to show in the quick order form?</comment>
                        </number_of_lines>
                    </fields>
                </configuration>
            </groups>
        </mobweb_quickorder>
    </sections>
</config>